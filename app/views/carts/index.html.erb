<div class="row">
  <div class="col-12">
    <div class="row justify-content-between">
      <h2>購物車</h2>
      <%= link_to "清空購物車", clean_carts_path(current_cart), method: "delete", class: "btn btn-danger", data:{confirm:"確定清空整個購物車嗎？"} %>
    </div>
    <table class="table">
      <thead>
        <th>商品圖片</th>
        <th>商品資訊</th>
        <th>單價</th>
        <th>數量</th>
        <th></th>
      </thead>
      <!-- 這裡因為是 多對多的關係，為何不能使用 current_cart.products ? -->
      <!-- 要取用 購買商品數量 一定要使用 cart_item.quantity ？ -->
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail" ) %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail" ) %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to cart_item.product.title, product_path(cart_item.product) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= form_for(cart_item, url: cart_item_path(cart_item.product_id)) do |f| %>
                <%= f.select :quantity, 1..5 %>
                <%= f.submit "更新", data: {disable_with: "處理中......"} %>
              <% end %>
            </td>
            <td>
              <%= link_to cart_item_path(cart_item.id), method: "delete", data: { confirm: "確定刪除商品嗎？" }  do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>

    <div class="row justify-content-end">
      <div>
        <span>
          總共 NTD $<%= render_total_price(current_cart) %>
        </span>
        <br>
        <button class="btn btn-danger">確認結帳</button>
      </div>
    </div>
  </div>
</div>
