<div class="row">
  <h2>購物明細</h2>
  <table class="table">
    <thead>
      <th>商品明細</th>
      <th>單價</th>
      <th>數量</th>
    </thead>

    <tbody>
      <% current_cart.cart_items.each do |cart_item|%>
      <tr>
        <td><%= link_to cart_item.product.title, product_path(cart_item.product) %></td>
        <td><%= cart_item.product.price %></td>
        <td><%= cart_item.quantity %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="w-100 d-flex justify-content-end">
    <div>總計 $<%= render_total_price(current_cart)%> NTD</div>
  </div>

  <div class="w-100">
    <%= simple_form_for(@order) do |f| %>
    <div class="form-group col-lg-12">
      <%= f.input :billing_name, label:"訂購人" %>
    </div>
    <div class="form-group col-lg-12">
      <%= f.input :billing_address, label:"訂購人地址" %>
    </div>
    <div class="form-group col-lg-12">
      <%= f.input :ship_name, label:"收件人" %>
    </div>
    <div class="form-group col-lg-12">
      <%= f.input :ship_address, label:"收件地址" %>
    </div>
    <%= f.submit "建立訂單", class:"btn btn-danger",  data: { disable_with: "處理中" } %>
    <% end %>
  </div>

</div>
