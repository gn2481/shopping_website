<!DOCTYPE html>
<html>

<head>
  <title>Shopping</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Shopping </a>
      </div>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="nav navbar-nav navbar-right">
          <li class="nav-item dropdown ">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Hi!, <%= current_user.email %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to("歷史訂單", account_orders_path ,class: "dropdown-item") %> 
              <div class="dropdown-divider"></div>
              <%= link_to("登出", destroy_user_session_path, method: :delete ,class: "dropdown-item") %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="row">
    <div class="col-2 bg-light vh-100 px-0">
      <div class="list-group" id="list-tab" role="tablist">
        <%= link_to  "Admin Dashboard", admin_products_path, class:"list-group-item list-group-item-action list-group-item-primary" %>
        <%= link_to  "User Dashboard", products_path, class:"list-group-item list-group-item-action" %>

      </div>
    </div>

    <div class="col-10">
      <%= render "common/flashes" %>
      <%= yield %>
      <%= render "common/footer" %>
    </div>
  </div>
</body>

</html>
